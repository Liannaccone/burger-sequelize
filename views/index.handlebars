<div class='jumbotron text-center'>
	<h1> Burgers! </h1>
</div>

<div class='row'>

	<div class='col-lg-4'>
		<div class='panel panel-default'>
			<div class='panel-heading'>
				<h2 class='panel-title'> Burgers on the table....</h2>
			</div>
			<div class='panel-body'>
				<ul>
					{{#each burgers}}
						{{#unless devoured}}
							{{> burgers/burger-block devour=true}}
						{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class='col-lg-4'>
		<h2>Add a Burger</h2>
		<form class="create-form">

		  <div class="form-group">
		    <label for="burg">Burger Name:</label>
		    <input type="text" id="burg" name="name">
		  </div>

		  <button id="submit-btn" type="submit">Add Burger</button>
		</form>
	</div>

	<div class='col-lg-4'>
		<div class='panel panel-default'>
			<div class='panel-heading'>
				<h2 class='panel-title'> Burgers you have already eaten....</h2>
			</div>
			<div class='panel-body'>
				<ul>
					{{#each burgers}}
						{{#if devoured}}
							{{> burgers/burger-block devour=false}}
						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>